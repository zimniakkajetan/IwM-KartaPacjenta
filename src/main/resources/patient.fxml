<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<GridPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <HBox fx:id="topHBox" GridPane.rowIndex="0" spacing="16">
        <padding><Insets top="10" right="10"  bottom="10" left="10"/></padding>
        <children>
            <VBox alignment="CENTER">
        <JFXButton fx:id="backButton" onAction="#goBack"></JFXButton>
            </VBox>
        <Text   fx:id="textPatientName"  strokeType="OUTSIDE"  text="Firstname Lastname">
               <font>
                  <Font size="25.0" />
               </font>
        </Text>
        </children>

    </HBox>
            <JFXTabPane fx:id="tabPane" GridPane.rowIndex="1"  GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab text="Info">
                     <content>
                        <TextArea fx:id="textAreaPatientInfo" prefHeight="200.0" prefWidth="200.0" />
                     </content></Tab>
                <Tab text="Observations">
                     <content>
                         <VBox>
                             <HBox alignment="BOTTOM_RIGHT" spacing="8">
                             <JFXDatePicker fx:id="datePickerBegin" promptText="Begin date" onAction="#filterByDate"/>
                                 <JFXDatePicker fx:id="datePickerEnd" promptText="End date" onAction="#filterByDate"/>
                             </HBox>
                             <TextArea fx:id="textAreaPatientObservations" prefHeight="487.0" prefWidth="553.0" />
                         </VBox>
                     </content>
                  </Tab>
                  <Tab text="Medications">
                     <content>
                        <TextArea fx:id="textAreaPatientMedications" prefHeight="200.0" prefWidth="200.0" />
                     </content></Tab>
                  <Tab text="Medication Statements">
                     <content>
                        <TextArea fx:id="textAreaPatientMedicationStatements" prefHeight="200.0" prefWidth="200.0" />
                     </content></Tab>
              </tabs>
            </JFXTabPane>
</GridPane>
